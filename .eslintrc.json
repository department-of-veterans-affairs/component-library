{
  "env": {
    "browser": true,
    "es2021": true,
    "mocha": true
  },
  "extends": ["eslint:recommended", "plugin:react/recommended", "prettier"],
  "parser": "@babel/eslint-parser",
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 12,
    "sourceType": "module",
    "babelOptions": {
      "configFile": "./config/babel.config.js"
    }
  },
  "plugins": ["react", "jsx-a11y", "prettier", "mocha"],
  "rules": {
    "prettier/prettier": ["error"]
  },
  "globals": {
    "global": "writable"
  }
}
