{
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "env": {
    "es2020": true,
    "browser": true
  },
  "plugins": ["react", "i18next"],
  "rules": {
    "i18next/no-literal-string": [
      2,
      {
        "mode": "jsx-only", "jsx-attributes": { "include": ["aria-label"] },
        "should-validate-template": true
      }
    ]
  },
  "overrides": [
    {
      "files": [
        "**/*.spec.tsx",
        "**/*.spec.ts",
        "src/testing/**/*",
        "**/*.e2e.ts"
      ],
      "rules": {
        "i18next/no-literal-string": 0
      }
    }
  ]
}
