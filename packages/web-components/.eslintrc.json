{
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "env": {
    "es2020": true,
    "browser": true
  },
  "plugins": ["react", "i18next"],
  "rules": {
    "i18next/no-literal-string": 2
  }
}
