{
  "name": "@department-of-veterans-affairs/css-library",
  "version": "0.5.1",
  "packageManager": "yarn@3.2.0",
  "files": [
    "dist/**/*.css",
    "dist/**/*.scss",
    "dist/**/*.json"
  ],
  "scripts": {
    "build:tokens": "style-dictionary build",
    "build:stylesheets": "sass --load-path=../../node_modules/@uswds/uswds/packages/ src/stylesheets:dist/",
    "build:minify": "yarn build:stylesheets --style compressed --no-source-map",
    "build:minify-core": "sass --style compressed --no-source-map dist/core.css:dist/core.min.css",
    "build": "yarn run clean-dist && yarn run copy && yarn build:tokens && yarn build:stylesheets && yarn build:minify-core",
    "clean-dist": "rimraf dist/*",
    "copy-assets": "cp -rv src/assets/fonts dist/fonts/ && yarn run copy-assets-formation-overrides",
    "copy-assets-formation-overrides": "cp -rv src/stylesheets/formation-overrides/img dist/img/",
    "copy": "node ./copy-uswds-color-tokens.js && yarn run copy-assets"
  },
  "devDependencies": {
    "@uswds/uswds": "^3.7.1",
    "sass": "^1.64.1",
    "style-dictionary": "^3.8.0"
  },
  "dependencies": {
    "@divriots/style-dictionary-to-figma": "^0.4.0",
    "rimraf": "^5.0.5"
  }
}
