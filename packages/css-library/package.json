{
  "name": "@department-of-veterans-affairs/css-library",
  "private": true,
  "packageManager": "yarn@3.2.0",
  "files": [
    "dist/"
  ],
  "scripts": {
    "build:tokens": "style-dictionary build",
    "copy-assets": "cp -r src/assets/ dist && cp -r ../../node_modules/@uswds/uswds/dist/fonts/source-sans-pro dist/fonts",
    "build": "yarn copy-assets && sass --load-path=../../node_modules/@uswds/uswds/packages/ src/stylesheets:dist/",
    "build:minify": "yarn build --style compressed --no-source-map"
  },
  "devDependencies": {
    "@uswds/uswds": "^3.0.1",
    "sass": "^1.51.0",
    "style-dictionary": "^3.7.1"
  }
}
