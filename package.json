{
  "name": "@department-of-veterans-affairs/component-library-monorepo",
  "description": "The monorepo containing the component library packages.",
  "scripts": {
    "chromatic-bridge": "echo \"Nothing to see here\"",
    "dev": "bash ./setup.sh",
    "dev-windows": "powershell.exe -File ./setup.ps1",
    "docs": "yarn workspace @va/docs dev",
    "docs:build": "yarn workspace @va/docs build",
    "docs:cms": "yarn workspace @va/docs dev:cms",
    "docs:all": "concurrently \"yarn docs:cms\" \"yarn storybook\"",
    "storybook": "yarn workspace @department-of-veterans-affairs/storybook storybook",
    "team-docs": "yarn workspace @va/team-docs dev",
    "team-docs:cms": "yarn workspace @va/team-docs dev:cms"
  },
  "private": true,
  "version": "1.0.0",
  "license": "MIT",
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "packageManager": "yarn@4.2.2",
  "resolutionsDoc": "resolutions.md",
  "resolutions": {
    "ansi-regex": "5.0.1",
    "cheerio": "1.0.0-rc.12",
    "diff": "3.5.0",
    "glob-parent": "5.1.2",
    "json-schema": "0.4.0",
    "minimatch": "3.1.2",
    "minimist": "1.2.6",
    "node-fetch": "2.6.7",
    "semver": "7.7.3",
    "tar-fs": "3.1.1",
    "trim": "0.0.3",
    "prism": "1.27.0"
  },
  "dependencies": {
    "webpack": "5"
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "husky": "9.0.11"
  }
}
